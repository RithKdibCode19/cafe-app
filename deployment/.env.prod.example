# ================================
# CAFE POS - Production Environment
# ================================
# Copy this to .env and fill in your values
# NEVER commit the actual .env file!

# Database
POSTGRES_DB=cafe_db
POSTGRES_USER=cafe_admin
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Backend
BACKEND_PORT=8081
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/cafe_db

# Frontend
FRONTEND_PORT=3000
# If using Cloudflare/Nginx on same domain, keep as /api
NUXT_PUBLIC_API_BASE=/api
# Internal docker network URL for SSR
NUXT_API_BASE_INTERNAL=http://backend:8081
# Your public domain (e.g., https://cafe-app.com)
NUXT_PUBLIC_SITE_URL=https://your-domain.com

# Bakong Payment API
BAKONG_API_URL=https://horrorbringer.site/api/v1
BAKONG_API_KEY=YOUR_BAKONG_API_KEY_HERE

# JWT Security
JWT_SECRET=GENERATE_A_LONG_RANDOM_STRING_HERE
JWT_EXPIRATION=86400000
